{
  "manifest_version": 3,
  "name": "ESAR Photos â€” Share to Website",
  "version": "1.1",
  "description": "Add a Google Photos album to the ESAR website directory with one click.",
  "permissions": ["storage"],
  "content_scripts": [
    {
      "matches": ["https://photos.google.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    },
    {
      "matches": [
        "https://script.google.com/*",
        "https://*.googleusercontent.com/*"
      ],
      "js": ["relay.js"],
      "run_at": "document_idle",
      "all_frames": true
    }
  ]
}
