{
  "manifest_version": 3,
  "name": "ESAR Photos â€” Share to Website",
  "version": "1.2",
  "description": "Add Google Photos albums to the ESAR member website directory. For authorized ESAR Photos admins only.",
  "icons": {
    "16":  "icons/icon16.png",
    "48":  "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": ["storage"],
  "content_scripts": [
    {
      "matches": ["https://photos.google.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    },
    {
      "matches": [
        "https://script.google.com/*",
        "https://*.googleusercontent.com/*"
      ],
      "js": ["relay.js"],
      "run_at": "document_idle",
      "all_frames": true
    }
  ]
}
